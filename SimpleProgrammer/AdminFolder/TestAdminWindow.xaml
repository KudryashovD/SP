                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="33"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <TextBox Name="Tests" TextAlignment="Center" FontSize="40" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="381,359,0,450" RenderTransformOrigin="0.465,0.483" Background="White" BorderBrush="#FF42AAFF" BorderThickness="3,3,3,3" Width="543">
