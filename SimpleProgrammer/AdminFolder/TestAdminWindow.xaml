                    </TextBox.Resources>
                </TextBox>
                <TextBox Name="Ball" TextAlignment="Center" FontSize="40" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="381,685,0,124" RenderTransformOrigin="0.465,0.483" Background="White" BorderBrush="#FF42AAFF" BorderThickness="3,3,3,3" Width="543">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="33"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <TextBlock FontSize="48" Margin="298,290,593,547"><Run Language="ru-ru" Text="Количество пройденных тестов"/></TextBlock>
                <TextBlock Text="Логин" FontSize="48" Margin="413,455,937,382"/>
