        xmlns:local="clr-namespace:SimpleProgrammer.AdminFolder"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="TestAdminWindow" Height="900" Width="1600">
    <Viewbox>
        <Border Height="900" Width="1600">
            <Grid>
                <Image Source="/Images/Menu.png" Margin="0,0,1380,0"/>
