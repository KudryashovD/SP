                <TextBlock FontSize="64" Text="Типы данных" VerticalAlignment="Center" TextAlignment="Center" Margin="679,32,534,770"/>
                <Button HorizontalAlignment="Left" Content="Легко" Margin="282,272,0,517" FontSize="64" BorderThickness="3,3,3,3" BorderBrush="#FF42AAFF" Width="591" Background="White" Click="Easy"/>
